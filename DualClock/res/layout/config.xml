<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/ScrollView1"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent" android:layout_width="fill_parent" android:background="@color/Lite">
    <RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_marginTop="10dip" android:textColor="@color/text_color" android:text="@string/mail_config" android:textStyle="bold" android:typeface="serif" android:textSize="20dip"></TextView>
        <RelativeLayout android:id="@+id/relativeLayout2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/textView1" android:layout_marginTop="10dip">
            <TextView android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_width="wrap_content" android:textColor="@color/text_color" android:textSize="16dip" android:textStyle="bold" android:typeface="serif" android:layout_marginLeft="10dip" android:layout_centerVertical="true" android:text="Calls Mail:"></TextView>
            <ToggleButton android:text="ToggleButton" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_marginRight="10dip" android:layout_centerVertical="true" android:layout_width="100dip" android:id="@+id/mail_toggleButton" android:typeface="serif" android:textStyle="bold" android:textSize="16dp" android:textColor="#000"></ToggleButton>
            <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#000" android:textSize="16dp" android:textStyle="bold" android:typeface="serif" android:text="Send Now" android:id="@+id/mail_sendnpw_btn" android:layout_toLeftOf="@+id/mail_toggleButton"></Button>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/relativeLayout6" android:layout_height="wrap_content" android:layout_below="@+id/relativeLayout2" android:layout_marginTop="10dp" android:layout_width="wrap_content">
            <TextView android:textSize="16dip" android:layout_height="wrap_content" android:layout_width="wrap_content" android:typeface="serif" android:textColor="@color/text_color" android:textStyle="bold" android:id="@+id/TextView07" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginLeft="10dip" android:text="SMS Mail:"></TextView>
            <ToggleButton android:layout_height="wrap_content" android:layout_width="100dip" android:text="ToggleButton" android:layout_marginRight="10dip" android:layout_centerVertical="true" android:layout_alignParentRight="true" android:textColor="#000" android:textSize="16dp" android:textStyle="bold" android:typeface="serif" android:id="@+id/sms_ToggleButton"></ToggleButton>
            <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#000" android:textSize="16dp" android:textStyle="bold" android:typeface="serif" android:text="Send Now" android:id="@+id/sms_sendnow_btn" android:layout_toLeftOf="@+id/sms_ToggleButton"></Button>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/relativeLayout7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/relativeLayout6" android:layout_marginTop="10dp">
            <TextView android:textSize="16dip" android:layout_height="wrap_content" android:layout_width="wrap_content" android:typeface="serif" android:textColor="@color/text_color" android:textStyle="bold" android:id="@+id/TextView08" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginLeft="10dip" android:text="Recording :"></TextView>
            <ToggleButton android:layout_height="wrap_content" android:layout_width="100dip" android:text="ToggleButton" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="10dip" android:textColor="#000" android:textSize="16dp" android:textStyle="bold" android:typeface="serif" android:id="@+id/record_ToggleButton"></ToggleButton>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/relativeLayout5" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_below="@+id/relativeLayout7">
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:textColor="#000" android:textSize="16dip" android:textStyle="bold" android:typeface="serif" android:id="@+id/setup_btn" android:text="Mail Setup"></Button>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/relativeLayout3" android:layout_marginTop="20dip" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_below="@+id/relativeLayout5">
            <RelativeLayout android:id="@+id/relativeLayout8" android:layout_height="wrap_content" android:layout_width="fill_parent">
                <TextView android:layout_width="wrap_content" android:textStyle="bold" android:id="@+id/textView3" android:textColor="@color/text_color" android:textSize="18dip" android:layout_height="wrap_content" android:text="SETUP" android:typeface="serif" android:layout_centerHorizontal="true" android:layout_centerVertical="true"></TextView>
                <Button android:layout_width="wrap_content" android:layout_centerVertical="true" android:layout_alignParentRight="true" android:text="Clear Fields" android:typeface="serif" android:textStyle="bold" android:textSize="14dp" android:layout_height="40dp" android:id="@+id/clear_btn" android:layout_marginRight="10dp"></Button>
            </RelativeLayout>
            <TextView android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dip" android:typeface="serif" android:textStyle="bold" android:textSize="17dip" android:textColor="@color/text_color" android:text="From :" android:layout_marginLeft="5dp" android:layout_below="@+id/relativeLayout8"></TextView>
            <RelativeLayout android:id="@+id/relativeLayout4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/textView4" android:layout_marginTop="7dip">
                <TextView android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_width="wrap_content" android:text="Email Id :" android:textColor="@color/text_color" android:textSize="16dip" android:textStyle="bold" android:typeface="serif" android:layout_marginLeft="10dip" android:layout_centerVertical="true"></TextView>
                <EditText android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_width="200dp" android:layout_marginRight="5dp" android:singleLine="true" android:inputType="textEmailAddress" android:id="@+id/emailid">
                    <requestFocus></requestFocus>
                </EditText>
            </RelativeLayout>
            <RelativeLayout android:layout_height="wrap_content" android:id="@+id/RelativeLayout01" android:layout_width="wrap_content" android:layout_below="@+id/relativeLayout4" android:layout_marginTop="7dip">
                <TextView android:layout_height="wrap_content" android:textColor="@color/text_color" android:layout_marginLeft="10dip" android:textSize="16dip" android:typeface="serif" android:id="@+id/TextView01" android:layout_width="wrap_content" android:textStyle="bold" android:layout_centerVertical="true" android:text="Password :"></TextView>
                <EditText android:layout_height="wrap_content" android:singleLine="true" android:layout_marginRight="5dp" android:layout_width="200dp" android:layout_centerVertical="true" android:layout_alignParentRight="true" android:password="true" android:id="@+id/pass_email"></EditText>
            </RelativeLayout>
            <TextView android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_width="wrap_content" android:layout_below="@+id/RelativeLayout01" android:layout_marginTop="10dip" android:text="To :" android:textSize="17dip" android:textStyle="bold" android:typeface="serif" android:textColor="@color/text_color" android:layout_marginLeft="5dp"></TextView>
            <RelativeLayout android:layout_height="wrap_content" android:id="@+id/RelativeLayout02" android:layout_width="wrap_content" android:layout_below="@+id/textView6" android:layout_marginTop="7dip">
                <TextView android:layout_height="wrap_content" android:textColor="@color/text_color" android:layout_marginLeft="10dip" android:textSize="16dip" android:typeface="serif" android:id="@+id/TextView02" android:layout_width="wrap_content" android:textStyle="bold" android:layout_centerVertical="true" android:text="Email Id-1 :"></TextView>
                <EditText android:layout_height="wrap_content" android:singleLine="true" android:layout_marginRight="5dp" android:inputType="textEmailAddress" android:layout_width="200dp" android:layout_centerVertical="true" android:layout_alignParentRight="true" android:id="@+id/to_email1"></EditText>
            </RelativeLayout>
            <RelativeLayout android:layout_height="wrap_content" android:id="@+id/RelativeLayout03" android:layout_width="wrap_content" android:layout_below="@+id/RelativeLayout02" android:layout_marginTop="7dip">
                <TextView android:layout_height="wrap_content" android:textColor="@color/text_color" android:layout_marginLeft="10dip" android:textSize="16dip" android:typeface="serif" android:id="@+id/TextView03" android:layout_width="wrap_content" android:textStyle="bold" android:layout_centerVertical="true" android:text="Email Id-2 :"></TextView>
                <EditText android:layout_height="wrap_content" android:singleLine="true" android:layout_marginRight="5dp" android:inputType="textEmailAddress" android:layout_width="200dp" android:layout_centerVertical="true" android:layout_alignParentRight="true" android:id="@+id/to_email2"></EditText>
            </RelativeLayout>
            <TextView android:layout_height="wrap_content" android:textColor="@color/text_color" android:textSize="17dip" android:typeface="serif" android:id="@+id/TextView04" android:layout_width="wrap_content" android:textStyle="bold" android:layout_below="@+id/RelativeLayout03" android:layout_marginLeft="5dip" android:layout_marginTop="10dip" android:text="SMTP :"></TextView>
            <RelativeLayout android:layout_height="wrap_content" android:id="@+id/RelativeLayout04" android:layout_width="wrap_content" android:layout_below="@+id/TextView04" android:layout_alignParentLeft="true" android:layout_marginTop="7dip">
                <TextView android:layout_height="wrap_content" android:textColor="@color/text_color" android:layout_marginLeft="10dip" android:textSize="16dip" android:typeface="serif" android:id="@+id/TextView05" android:layout_width="wrap_content" android:textStyle="bold" android:layout_centerVertical="true" android:text="Host/Server :"></TextView>
                <EditText android:layout_height="wrap_content" android:singleLine="true" android:layout_marginRight="5dp" android:layout_centerVertical="true" android:layout_alignParentRight="true" android:layout_width="170dip" android:id="@+id/smtp_server" android:inputType="textEmailAddress"></EditText>
            </RelativeLayout>
            <RelativeLayout android:layout_height="wrap_content" android:id="@+id/RelativeLayout05" android:layout_width="wrap_content" android:layout_below="@+id/RelativeLayout04" android:layout_alignParentLeft="true" android:layout_marginTop="7dip">
                <TextView android:layout_height="wrap_content" android:textColor="@color/text_color" android:layout_marginLeft="10dip" android:textSize="16dip" android:typeface="serif" android:id="@+id/TextView06" android:layout_width="wrap_content" android:textStyle="bold" android:layout_centerVertical="true" android:text="Port :"></TextView>
                <EditText android:layout_height="wrap_content" android:singleLine="true" android:layout_marginRight="5dp" android:layout_centerVertical="true" android:layout_alignParentRight="true" android:layout_width="170dip" android:id="@+id/smtp_port" android:inputType="number"></EditText>
            </RelativeLayout>
            <Button android:layout_width="100dip" android:text="Finish" android:id="@+id/finish_btn" android:typeface="serif" android:textSize="18dip" android:layout_marginTop="7dip" android:layout_height="40dp" android:textStyle="bold" android:layout_centerHorizontal="true" android:layout_below="@+id/RelativeLayout05"></Button>
        </RelativeLayout>
    </RelativeLayout>
    
</ScrollView>
